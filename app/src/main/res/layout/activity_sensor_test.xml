<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seth.developmenttest.DevTestActivity"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="78dp"
        android:orientation="vertical"
        tools:ignore="UselessParent"
        android:weightSum="5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/layout1"
            android:background="@drawable/rectangle"
            android:layout_margin="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Coordinates"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/title1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:text="lat: lon:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/coord"
                android:visibility="visible" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/button1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@drawable/refresh"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/layout2"
            android:layout_below="@+id/layout1"
            android:background="@drawable/rectangle"
            android:layout_margin="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Slope"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/title2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:text="89°"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/zval" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/layout3"
            android:layout_below="@+id/layout2"
            android:background="@drawable/rectangle"
            android:layout_margin="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Azimuth"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/title3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:text="359°"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/azi" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/layout4"
            android:layout_below="@+id/layout3"
            android:background="@drawable/rectangle"
            android:layout_margin="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Temperature"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/title4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:text="71°"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/temp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:id="@+id/layout5"
            android:layout_below="@+id/layout4"
            android:background="@drawable/rectangle"
            android:layout_margin="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Forecast"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/textView" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textView"
                android:orientation="horizontal"
                android:weightSum="7">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/forecast1"
                    android:background="@drawable/rectangle"
                    android:layout_margin="1dp">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/rain"
                        android:id="@+id/weather1"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_margin="1dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/day1"
                        android:text="Mon."
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:layout_above="@id/weather1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:id="@+id/hiLow1"
                        android:text="67°-88°"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:layout_below="@id/weather1"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/forecast2"
